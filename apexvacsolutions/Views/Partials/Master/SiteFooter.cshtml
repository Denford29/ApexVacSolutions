@using apexvacsolutions.Models
@inherits UmbracoTemplatePage
@{
    var siteSetting = Umbraco.TypedContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "GlobalSettings");
    var contactEmail = "contact@apexvacsolutions.com.au";
    var contactMobile1 = "0458 503 751";
    var contactMobile2 = "0429 829 787";
    var siteFacebook = "https://www.facebook.com/andrewandben";
    var siteAddress = "Adelaide, SA 5000";
    if (siteSetting != null && siteSetting.Id > 0 && siteSetting.Descendants("SiteDetails").Any())
    {
        var siteDetailsPage = siteSetting.Descendants("SiteDetails").FirstOrDefault();
        if (siteDetailsPage != null && siteDetailsPage.Id > 0)
        {
            if (siteDetailsPage.HasProperty("siteEmailAddress") && siteDetailsPage.HasValue("siteEmailAddress"))
            {
                contactEmail = siteDetailsPage.GetPropertyValue("siteEmailAddress").ToString();
            }
            if (siteDetailsPage.HasProperty("sitePhoneNumber1") && siteDetailsPage.HasValue("sitePhoneNumber1"))
            {
                contactMobile1 = siteDetailsPage.GetPropertyValue("sitePhoneNumber1").ToString();
            }
            if (siteDetailsPage.HasProperty("sitePhoneNumber2") && siteDetailsPage.HasValue("sitePhoneNumber2"))
            {
                contactMobile2 = siteDetailsPage.GetPropertyValue("sitePhoneNumber2").ToString();
            }
            if (siteDetailsPage.HasProperty("facebookPage") && siteDetailsPage.HasValue("facebookPage"))
            {
                siteFacebook = siteDetailsPage.GetPropertyValue("facebookPage").ToString();
            }
            if (siteDetailsPage.HasProperty("siteAddress") && siteDetailsPage.HasValue("siteAddress"))
            {
                siteAddress = siteDetailsPage.GetPropertyValue("siteAddress").ToString();
            }
        }
    }

    <section class="well well3 bg-primary">
        <div class="container">
            <div class="mailform-sub">
                <div class="row">
                    <div class="col-sm-6">
                        <hr>
                        <h4 class="text-center">
                            Get in touch with us...
                        </h4>
                        <hr>
                        <ul class="link-list text-center">
                            <li>
                                <a href="mailto:@contactEmail" target="_blank">
                                    <span class="icon fa-envelope"></span>
                                    @contactEmail
                                </a>
                            </li>
                            <li>
                                <a href="tel:@contactMobile1">
                                    <span class="icon fa-phone"></span>
                                    @contactMobile1
                                </a>
                            </li>
                            <li>
                                <a href="tel:@contactMobile2">
                                    <span class="icon fa-phone"></span>
                                    @contactMobile2
                                </a>
                            </li>
                            <li>
                                <a href="@siteFacebook" target="_blank" title="Follow us on Facebook.">
                                    <span class="icon fa-facebook"></span>
                                    APEX Vac Solutions on Facebook
                                </a>
                            </li>
                            <li>
                                <a href="@siteAddress" target="_blank" title="Visit us at our place">
                                    <span class="icon fa-map-marker"></span>
                                    @siteAddress
                                </a>
                            </li>
                            
                        </ul>
                    </div>
                    
                    <div class="col-sm-6 text-center">
                        <!--Facebook script - Start -->
                        <div id="fb-root"></div>
                        <script>
                            (function (d, s, id) {
                                var js, fjs = d.getElementsByTagName(s)[0];
                                if (d.getElementById(id)) return;
                                js = d.createElement(s); js.id = id;
                                js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.5&appId=825414407581475";
                                fjs.parentNode.insertBefore(js, fjs);
                            }(document, 'script', 'facebook-jssdk'));
                        </script>
                        <!--Facebook script - End -->
                        <hr>
                        <h4 class="text-center">
                            Visit our Facebook Page
                        </h4>
                        <hr>
                        <div class="fb-page m-t-10"
                             data-href="www.facebook.com/andrewandben"
                             data-tabs="timeline"
                             data-width="600"
                             data-height="300"
                             data-small-header="false"
                             data-adapt-container-width="true"
                             data-hide-cover="false" data-show-facepile="false">

                        </div>
                    </div>

                    </div>

            </div>
        </div>
    </section>
    <footer>
        <section class="well_foot-2 bg-secondary">
            <div class="container">
                <div class="rights">
                    <h1>
                        ApexVac<span>Solutions</span>
                    </h1>
                    &#169; <span id="copyright-year">2016</span>&nbsp;
                    <a href="http://rdmonline.co.uk/" class="pull-right">Crafted by RDM Online</a>
                </div>
            </div>
        </section>
    </footer>
}